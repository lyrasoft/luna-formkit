{
    "extends": [
        "@windwalker-io/unicorn/tsconfig.js.json"
    ],
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules/**/*"
    ],
    "types": ["reflect-metadata"],
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmit": false,
        "strict": true,
        "paths": {
            "@js/*": ["./src/*"],
        }
    }
}
